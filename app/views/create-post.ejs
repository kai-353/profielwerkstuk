<div class="container" style="margin-bottom: 300px;">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h4 class="mb-2">Maak een post</h4>
            <%- include("./partials/messages") %>
            <form action="/forum/create/post" method="POST">
              <div class="form-group">
                <label for="title">Titel</label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  class="form-control"
                  placeholder="Titel"
                />
              </div>
              <div class="form-group">
                <label for="body">Tekst</label>
                <textarea
                  type="text"
                  id="body"
                  name="body"
                  class="form-control mb-2"
                  rows="3"
                  placeholder="Tekst"
                ></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-block">Plaats</button>
            </form>
          </div>
        </div>
      </div>
</div>