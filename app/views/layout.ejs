<% if (typeof pagenr != 'undefined') { %>
  <script>
    function myFunction(e) {
      e.preventDefault()
      var text = document.getElementById('keyword').value;
      if (e.which == 13) {
        window.location.replace(`/forum/1?${new URLSearchParams({keyword: text}).toString()}`);
      } else {
        document.getElementById('keyword').value = text + String.fromCharCode(e.which);
      }
    }
  </script>
